###############################################################################
<% if @version == '5' -%>
LOGLIMIT=

INVALID_LOG_LEVEL=

LOG_BACKEND=

LOG_VERBOSITY=2

RELATED_LOG_LEVEL=

RPFILTER_LOG_LEVEL=info

SFILTER_LOG_LEVEL=info

STARTUP_LOG=/var/log/shorewall-init.log

TCP_FLAGS_LOG_LEVEL=info

UNTRACKED_LOG_LEVEL=

BLACKLIST_LOG_LEVEL=
<% end -%>

<% if @version == '4' -%>
LOGRATE=

LOGBURST=

BLACKLIST_LOGLEVEL=

TCP_FLAGS_LOG_LEVEL=info

RFC1918_LOG_LEVEL=info
<% end -%>

LOGFILE=/var/log/messages

LOGFORMAT="Shorewall:%s:%s:"

LOGTAGONLY=No

LOGALLNEW=

MACLIST_LOG_LEVEL=info

SMURF_LOG_LEVEL=info

LOG_MARTIANS=No

###############################################################################
#	L O C A T I O N	  O F	F I L E S   A N D   D I R E C T O R I E S
###############################################################################

IPTABLES=

SHOREWALL_SHELL=/bin/sh

SUBSYSLOCK=/var/lock/subsys/shorewall

MODULESDIR=

RESTOREFILE=

LOCKFILE=

<% if @version == '4' -%>
PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/bin:/usr/local/sbin

CONFIG_PATH=/etc/shorewall:/usr/share/shorewall

IPSECFILE=zones
<% end -%>

<% if @version == '5' -%>
PATH="/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/bin:/usr/local/sbin"

ARPTABLES=

CONFIG_PATH="/etc/shorewall:/usr/share/shorewall"

GEOIPDIR=/usr/share/xt_geoip/LE

IP=

IPSET=

NFACCT=

PERL=/usr/bin/perl

TC=
<% end -%>

###############################################################################
#		D E F A U L T   A C T I O N S / M A C R O S
###############################################################################

<% if @version == '4' -%>
DROP_DEFAULT="Drop"
REJECT_DEFAULT="Reject"
ACCEPT_DEFAULT="none"
QUEUE_DEFAULT="none"
NFQUEUE_DEFAULT="none"
<% end -%>

<% if @version == '5' -%>
ACCEPT_DEFAULT=none
DROP_DEFAULT=Drop
NFQUEUE_DEFAULT=none
QUEUE_DEFAULT=none
REJECT_DEFAULT=Reject
<% end -%>

###############################################################################
#                        R S H / R C P  C O M M A N D S
###############################################################################

RSH_COMMAND='ssh ${root}@${system} ${command}'
RCP_COMMAND='scp ${files} ${root}@${system}:${destination}'

###############################################################################
#			F I R E W A L L	  O P T I O N S
###############################################################################

ADD_IP_ALIASES=Yes

ADD_SNAT_ALIASES=No

ADMINISABSENTMINDED=Yes

CLAMPMSS=No

CLEAR_TC=Yes

DELETE_THEN_ADD=Yes

DETECT_DNAT_IPADDRS=No

DISABLE_IPV6=Yes

DONT_LOAD=

EXPAND_POLICIES=Yes

FASTACCEPT=No

IP_FORWARDING=On

KEEP_RT_TABLES=No

MACLIST_TABLE=filter

MACLIST_TTL=

MAPOLDACTIONS=No

MARK_IN_FORWARD_CHAIN=No

MODULE_SUFFIX=

MULTICAST=No

MUTEX_TIMEOUT=60

OPTIMIZE=0

RETAIN_ALIASES=No

ROUTE_FILTER=No

SAVE_IPSETS=No

TC_ENABLED=Internal

TC_EXPERT=No

<% if @version == '4' -%>
BLACKLISTNEWONLY=Yes

BRIDGING=No

DELAYBLACKLISTLOAD=No

DYNAMIC_ZONES=No

EXPORTPARAMS=Yes

HIGH_ROUTE_MARKS=No

IMPLICIT_CONTINUE=Yes

PKTTYPE=Yes

RFC1918_STRICT=No

USE_ACTIONS=Yes
<% end -%>

<% if @version == '5' -%>
